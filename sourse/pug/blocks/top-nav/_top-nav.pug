mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		.container
			+e.container
				.row
					.col-auto
						+btn('Ритуальные услуги', 'button').btn.btn-primary.d-none.d-lg-block
					.col.order-lg-0.order-last
						.menu-mobile.menu-mobile--js
							.menu-mobile__inner
								+menu-toggle()
								.small.d-block.d-lg-none Ритуальные услуги в&nbsp;Санкт&nbsp;-&nbsp;Петербурге и&nbsp;области
								//- +btn('Ритуальные услуги', 'button').btn.btn-primary.d-block.d-lg-none
