mixin item-sos(icon, a='#')
	+e.A.item(href= a class=`soc__item--${icon}` target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			each soc in social
				+item-sos(soc)

mixin modalSoc()
	+b.soc
		if block
			block
		else
			each soc in social
				+item-sos(soc)

