mixin sCatalogBody-item(img='1',title='Гробы обитые тканью',size='1.9')
		.sCatalogBody__card-wrap
			+img(`img/sProducts-img-${img}.png`)
			.sCatalogBody__title.h6!= title
			.sCatalogBody__size Размер: #{size} м
			p #[span 36 000] руб.
			.sCatalogBody__add-to-card
				+addblock()
				a(href="#").btn.btn-primary в корзину

mixin sCatalogBody-banner()
	//- .col-md-6.col-xl-4
	+e.card-wrap--banner
		+img('img/sCatalogBody-img-1.png', 'bg')
		+e.title Пенсионерам #[span скидка 10%]
		a(href="#").btn.btn-secondary Подробнее

mixin sCatalogBody-item-slider()
	//- .col-md-6.col-xl-4
	+e.card-wrap
		+e.slider--js.swiper
			.swiper-wrapper
				.swiper-slide
					+img('img/sProducts-img-1.png')
				.swiper-slide
					+img('img/sProducts-img-1.png')
				.swiper-slide
					+img('img/sProducts-img-1.png')
			+arrow()
			.swiper-pagination
		+e.title.h6 Гробы обитые тканью
		+e.size Размер: 1.9 м
		p #[span 36 000] руб.
		+e.add-to-card
			+addblock()
			a(href="#").btn.btn-primary в корзину

