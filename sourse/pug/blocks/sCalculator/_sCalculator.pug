							+calculatorItem('Одежда')
							+calculatorItem('Тапочки')
							+calculatorItem('Венок')
							+calculatorItem('Лента на венок')
							+calculatorItem('Корзина')
					+e.wrap
						h3 2. Ритуальные Услуги
						+e.row.row
							+calculatorItem('Доставка ритуальных товаров')
							+calculatorItem('Носильщики')
