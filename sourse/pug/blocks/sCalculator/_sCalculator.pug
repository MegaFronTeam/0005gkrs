mixin calculatorItem(title)
	.col-md-6.col-lg-4 
		+e.select-wrap
			+select(title, 'Не выбрано', '1', '2', '3', '4')
			+icon('dd-arrow-up')

mixin sCalculator(data)
	// start sCalculator
	+b.SECTION.sCalculator.section#sCalculator&attributes(attributes)
		.container
			+b.section-title.text-center
				h1 Калькулятор стоимости ритуальных услуг
			.tabs
				.tabs__caption
					.tabs__btn.active Погребение
					.tabs__btn Кремация
				.tabs__content.active
					+e.text Расчет стоимости погребения
