mixin sHaveQuestions(h2,sponsors)
	// start sHaveQuestions
	+b.SECTION.sHaveQuestions.section#sHaveQuestions&attributes(attributes)
		.container
			+b.section-title.text-center
				h2!= h2
				p Оставьте контактные данные и&nbsp;мы&nbsp;свяжемся с&nbsp;Вами в&nbsp;течение 10&nbsp;минут.
			+form-wrap()
				+input('+7 (___) ___-__-__', 'tel')
				button(type="submit").btn.btn-secondary Отправить
			+e.text Нажимая «Отправить», Вы соглашаетесь с #[a(href="#") политикой конфиденциальности данных].
			if sponsors
				+b.sponsors
					+e.slider--js.swiper
						.swiper-wrapper
							+e.wrap.swiper-slide
								+img('/img/sponsors-img-1.png')
							+e.wrap.swiper-slide
								+img('/img/sponsors-img-2.png')
							+e.wrap.swiper-slide
								+img('/img/sponsors-img-3.png')
	// end sHaveQuestions