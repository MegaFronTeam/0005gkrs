mixin stepItem(img,title,descr)
	.col-sm-6.col-lg-3
		+b.step-item
			+e.img-wrap
				+img(`img/step-${img}.png`)
			+e.text
				+e.title!= title
				+e.descr.small!= descr

mixin sSteps(data)
	// start sSteps
	+b.SECTION.sSteps.section#sSteps&attributes(attributes)
		.container.text-center
			+b.section-title.text-center
				h2 Что делать, если умер близкий человек
			.small Мы&nbsp;всегда рядом в&nbsp;этот трудный момент
			.row
				+stepItem('1', 'Обратиться в&nbsp;наше агентство', 'Позвоните по телефону 8-800-000-00-00 на нашу горячую линию. Городская Круглосуточная Ритуальная служба работает 24/7.')
				+stepItem('2', 'Получить консультацию', 'Позвоните по телефону 8-800-000-00-00 на нашу горячую линию. Городская Круглосуточная Ритуальная служба работает 24/7.')
				+stepItem('3', 'Следовать инструкциям агента', 'Позвоните по телефону 8-800-000-00-00 на нашу горячую линию. Городская Круглосуточная Ритуальная служба работает 24/7.')
				+stepItem('4', 'Согласовать план', 'Позвоните по телефону 8-800-000-00-00 на нашу горячую линию. Городская Круглосуточная Ритуальная служба работает 24/7.')
			+btn('Вызвать агента').btn.btn-secondary
	// end sSteps